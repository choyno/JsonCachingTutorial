<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
	android:orientation="vertical"
    android:background="@color/white_solid">
     
    
    <TextView
        android:id="@+id/announcement_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_announcement_title"
        android:gravity="left"
        android:textSize="15sp"
        android:textColor="@color/picton_blue" />

    <TextView
        android:id="@+id/announcement_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_announcement_message" 
        android:textSize="12sp"
        android:layout_marginBottom="0dp" />
    
    <TextView
        android:id="@+id/announcement_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_announcement_date" 
        android:gravity="right"
        android:layout_gravity="right"
        android:textSize="8sp"
        android:layout_marginTop="0dp" />

</LinearLayout>